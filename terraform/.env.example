# Confluent Cloud Credentials (REQUIRED)
TF_VAR_confluent_cloud_api_key="<your_cloud_api_key>"
TF_VAR_confluent_cloud_api_secret="<your_cloud_api_secret>"

# Environment & Cluster IDs (REQUIRED - Target for deployment)
TF_VAR_confluent_environment_id="<your_env_id>"
TF_VAR_confluent_kafka_cluster_id="<your_cluster_id>"
TF_VAR_schema_registry_id="<your_sr_id>"

# Google Cloud Platform (REQUIRED)
TF_VAR_gcp_project_id="<your_gcp_project_id>"
TF_VAR_gcp_region="us-east1" # Default
TF_VAR_google_service_account_key="<json_key_content_minified>"

# NOTE: API Keys for Kafka and Schema Registry are now AUTOMATICALLY generated by Terraform!
# You do NOT need to provide them here.
